%% include 'header.rs.jinja'

%% for (name, args), pr in helpers.items()
/// {{ name }} ( {{ args|join(',') }} )
/// {{ pr.text }}
#[macro_export]
macro_rules! helper__{{ name|construct_id }} {
    ($ctx:expr{% for a in args %}, ${{ a }}:expr{% endfor %}) => {{ '{{' }}
        {{ pr.tree|treeToRust({})|replace('ctx', '$ctx') }}
    {{ '}}' }};
}

%% endfor
