%% include 'header.rs.jinja'

%% for name, info in helpers.items()
/// {{ name }} ( {{ info.args|join(',') }} )
/// {{ info.pr.text }}
#[macro_export]
macro_rules! helper__{{ name|construct_id }} {
    ($ctx:expr{% for a in info.args %}, ${{ a }}:expr{% endfor %}) => {{ '{{' }}
        {{ info.pr.tree|treeToRust({})|replace('ctx', '$ctx') }}
    {{ '}}' }};
}

%% endfor
