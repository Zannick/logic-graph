                }
%% else
                if ctx.count(Item::{{ item }}) < {{ ct }} {
                    map.insert(Item::{{ item }}, {{ ct }} - ctx.count(Item::{{ item }}));
                }
%% endif
%% endfor
%% for ref in refs
                match self.rule_{{ ref|construct_id }} {
%% for vref, items in rule_items[ref].items()
