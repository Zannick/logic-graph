            {% if act.to[1:] in data_defaults %}data::{{ act.to[1:] }}(ctx.position()){% else -%}
            ctx.{{ act.to[1:]|translate_ctx(act) }}(){% endif -%}
            {%- else -%}
            SpotId::{{ act|get_exit_target }}
            {%- endif -%},
%% endif
