# AUTOGENERATED FOR {{ game_name }} - MODIFICATIONS WILL BE LOST
[package]
name = "{{ package }}"
version = "0.1.0"
edition = "2021"

[lib]
name = "lib{{ package }}"
path = "src/lib.rs"

[[bin]]
name = "{{ package }}"
path = "bin/main.rs"

[[bench]]
name = "bench"
harness = false

[[test]]
name = "unittest"
path = "tests/unittest.rs"
harness = false

[dependencies]
analyzer = { path = "../../analyzer" }
bitflags = { version = "2.*", features = ["serde"] }
bytemuck = { version = "1.*", features = ["extern_crate_alloc", "min_const_generics"] }
clap = { version = "4.*", features = ["derive"] }
diesel = { version = "2.*", default-features = false, features = ["mysql"], optional = true}
enum-map = { version = ">=2.7.2", features = ["serde"] }
lazy_static = "*"
log4rs = "*"
phf = { version = "0.11", features = ["macros"] }
rustc-hash = "*"
serde = { version = ">=1.0", features = ["derive"] }
serde_repr = "*"
yaml-rust = "*"
zstd = "*"

[dev-dependencies]
base64 = "*"
criterion = "*"
rmp-serde = "*"
serde_json = "*"

[target.'cfg(not(target_env = "msvc"))'.dependencies]
jemalloc_pprof = { version = "*", optional = true }
tikv-jemallocator = { version = "0.6.0", features = ["profiling", "unprefixed_malloc_on_supported_platforms"], optional = true }

[features]
jemalloc = ["dep:jemalloc_pprof", "dep:tikv-jemallocator", "analyzer/jemalloc"]
mysql = ["dep:diesel", "analyzer/mysql"]

