#[derive(Copy, Clone, Debug, Default, PartialEq, Eq)]
pub enum Status {
    #[default] None,
    Visited,
    Skipped,
}

#[derive(Clone, Debug, Default, Eq, PartialEq)]
pub struct Context {
%# Splitting into separate Cow structs performs worse :(
    // context vars
%% for ctx, t in context_types.items()
