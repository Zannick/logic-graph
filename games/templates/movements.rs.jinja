pub fn local_movements(movement_state: MovementState, src: SpotId) -> Vec<(SpotId, u32)> {
    match src {
        SpotId::None => Vec::new(),
%% for r in regions
        SpotId::{{ r.id }}(s) => s.local_movements(movement_state),
%% endfor
    }
}

pub fn local_travel_time(movement_state: MovementState, src: SpotId, dest: SpotId) -> u32 {
    match (src, dest) {
%% for r in regions
        (SpotId::{{ r.id }}(s), SpotId::{{ r.id }}(d)) => s.local_travel_time(d, movement_state),
%% endfor
        _ => u32::MAX,
    }
}

pub fn are_spots_connected(src: SpotId, dest: SpotId) -> bool {
